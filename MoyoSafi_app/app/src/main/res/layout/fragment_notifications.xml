<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.notifications.NotificationsFragment">

    <LinearLayout
      android:id="@+id/header_notification"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:paddingLeft="20dp"
      android:orientation="vertical"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Notifications"
          android:textColor="@color/black"
          android:textSize="18sp" />

      <TextView
          android:layout_width="70dp"
          android:layout_height="4dp"
          android:layout_marginLeft="2dp"
          android:text=""
          android:background="@color/principal_color"/>

  </LinearLayout>

    <ScrollView
        android:id="@+id/notification_layout_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/header_notification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/notification_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="@drawable/row_setting_fragment"
            android:visibility="gone">

            <TextView
                android:id="@+id/date_of_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date de la notification"
                android:textSize="16sp"
                android:textColor="@color/third_color"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="3dp"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="5dp"
                android:text=""
                android:background="@color/principal_color"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Etat moyen"
                android:textColor="@color/principal_color"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prenez vos médicaments ordinairement si vous l'aviez fait il y a 5h"
                android:textSize="16sp"
                android:textColor="@color/gray_color"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/default_display_layout"
        app:layout_constraintTop_toBottomOf="@+id/notification_layout_scroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:background="@drawable/row_setting_fragment"
        android:visibility="visible">

        <TextView
            android:id="@+id/actual_date_default_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date du jour"
            android:textSize="16sp"
            android:textColor="@color/third_color"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"
            android:text=""
            android:background="@color/principal_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aucune notification enregistrer"
            android:textColor="@color/principal_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connecter votre téléphone à votre bracelet, pour recevoir des notifications sur la santé"
            android:textSize="16sp"
            android:textColor="@color/gray_color"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>