<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/notification_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="20dp"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/row_setting_fragment">

            <TextView
                android:id="@+id/date_of_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date de la notification"
                android:textSize="16sp"
                android:textColor="@color/third_color"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="3dp"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="5dp"
                android:text=""
                android:background="@color/principal_color"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Etat"
                android:textColor="@color/principal_color"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/content_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prenez vos mÃ©dicaments ordinairement si vous l'aviez fait il y a 5h"
                android:textSize="16sp"
                android:textColor="@color/gray_color"/>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>